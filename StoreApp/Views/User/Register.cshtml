
@{
    ViewBag.Title = "Register";
}

<h2>Register</h2>

<div class="container">
    <div class="row">
        <div class="col-md-4" style="float: none; margin: 0 auto;">
            <form action="/User/Register" method="post">
                <h4 style="color: red;">@ViewData["status"]</h4>
                <div class="form-group">
                    <input type="text" name="username" placeholder="Please Enter User Name" class="form-control" required>
                </div>
                <div class="form-group">
                    <input type="email" name="email" placeholder="Please Enter Email" class="form-control">
                </div>
                <div class="form-group">
                    <input type="password" name="password" placeholder="Please Enter Password" class="form-control" required>
                </div>
                <button type="submit" class="btn btn-primary">Register</button>
            </form>
        </div>
    </div>
</div>